var log = new Log();

routeMnger.register('GET', 'publisher', '/publisher/assets/{type}/', function(context) {
	var query = request.getParameter("query");

	try {

		//TODO: Check for valid asset types
		var artifactManager = rxtManager.getArtifactManager(context.params.type);

		var artifacts = artifactManager.list(DEFAULT_PAGE) || [];

		// for queries
		if(query) {
			var query = query.toLowerCase();
			assets = artifactManager.find(function(asset) {
				var name, match, attributes = asset.attributes;
				//this seach is can be improved in attribute level search and it is written for this level of search also 
				name = 'overview_name';
				for(name in attributes) {
					if(attributes.hasOwnProperty(name)) {
						if(attributes[name].toLowerCase().indexOf(query) !== -1) {
							match = true;
							break;
						}
					}
				}
				if(!match) {
					return false;
				}
				return asset;

			}, null);
			artifacts = assets;

		} else {
			//normal list for asserts
			var artifacts = artifactManager.list(DEFAULT_PAGE) || [];

		}

		dataInjector.inject(artifacts, DataInjectorModes.DISPLAY);

        //Perform some filtering logic on the artifacts
        artifacts=filterManager.filter(artifacts);

		caramel.render({
			op : 'list',
			cuser : user.current(session),
			shortName : context.params.type,
			artifacts : artifacts
		});
	} catch (e) {
		response.sendError(400, "Your request is malformed");
		log.info(e);
	}

	/*for each(var artifact in artifacts){
	 print(artifact.id+'<br/><br/>');
	 }*/

});


