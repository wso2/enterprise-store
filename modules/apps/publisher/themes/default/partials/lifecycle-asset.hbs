<div class='content-div'>
<div class="row-fluid">
    <div class="span12 asset-view-container">
        <div class="widget wlightblue">
            <div class="widget-head">
                <div class="pull-left">Lifecycle - {{{snoop "fields(name=overview_name).value" this.data}}}</div>
                <div class="clearfix"></div>
            </div>
            <div class="widget-content">
                <form class="form-horizontal">
                    <div class="control-group">
                        <div class="controls">
                            <legend><div id='state'>{{data.info.lifecycleState}}</div></legend>
                            <div id='checklist'></div>
                        </div>
                        <div id='canvas' class='controls'>

                        </div>
                    </div>
                    <div class="form-actions">
                        <input type="button" value="Promote" class="btn btn-primary"  id="btn-asset-promote">
                        <input type="button" value="Demote" class="btn" id="btn-asset-demote">
                    </div>
                </form>
            </div>
        </div>
        <div id='lc-history'></div>
    </div>
</div>
</div>