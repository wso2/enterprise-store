    <div class="btn-group context_menu left">
        <a class="btn btn-large dropdown-toggle assetTypeSwitcher" data-toggle="dropdown" href="#">
            <i class="icon-{{currentType}}"></i>Type : <span class="publisherTitle">{{currentType}}</span>
            <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <!--
            <li><a target="_self" href="/publisher/assets/gadget/"><i class="icon-dashboard"></i>{{t "Gadget"}}</a></li>
            <li><a target="_self" href="/publisher/assets/site/"><i class="icon-compass"></i>{{t "Site"}}</a></li>
            <li><a target="_self" href="/publisher/assets/ebook/"><i class="icon-book"></i>{{t "EBook"}}</a></li> -->
            {{#each breadcrumb}}
                <li><a target="_self" href="{{this.url}}"><i class="{{this.assetIcon}}"></i>{{this.assetType}}</a></li>
            {{/each}}
        </ul>
    </div>
    {{#if assetName}}
         <span class="breadcrumb-separator">/</span>
         <span class="breadcrumb-text left">{{assetName}}</span>
         <span class="breadcrumb-separator">/</span>
         <div class="btn-group context_menu left">
            <a class="btn btn-large dropdown-toggle assetTypeSwitcher" data-toggle="dropdown" href="#">
                Version : <span class="publisherTitle">{{currentVersion}}</span>
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                {{#each versions}}
                <li><a target="_self" href="/publisher/asset/{{../currentType}}/{{this.id}}">{{this.version}}</a></li>
                {{/each}}
            </ul>
         </div>
    {{/if}}
    {{#if breadCrumbStaticText}}
         <span class="breadcrumb-separator">/</span>
         <span class="breadcrumb-text left">{{breadCrumbStaticText}}</span>
    {{/if}}

</div>
<div class="span3 pull-right control-search">
	<input type="text" class="inp-ribbon span12" placeholder="{{t "Search.."}}" id="inp_searchAsset" />
	<a class="" id="search-button"> <i class="icon-search"></i> </a>
</div>

