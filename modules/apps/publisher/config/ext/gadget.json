{
    "applyTo": "gadget",


    "import": [
        "/modules/ext/scripts/rxt.importer.js",
        "/modules/ext/scripts/form.exporter.js",
        "/modules/ext/scripts/asset.exporter.js",
        "/modules/ext/scripts/asset.action.save.js",
        "/modules/ext/scripts/asset.lifecycle.action.save.js",
        "/modules/ext/scripts/form.importer.js"],

    "fieldPropertyRules": [
        "overview.name:order=1",
        "overview.provider:order=2",
        "overview.description:order=3",
        "overview.version:order=4",
        "overview.version:save=disabled"
    ],

    "link": [
        "overview.stage:value=*.lifecycleState"
    ],

    "tables": [

        {
            "name": "*"
        }

    ],

    "fieldProperties": [

        {
            "field": "*",
            "name": "order",
            "value": ""
        },
        {
            "field": "*",
            "name": "hidden",
            "value": "false"
        },
        {
            "field": "*",
            "name": "visible",
            "value": "true"
        },
        {
            "field": "overview.*",
            "name": "save",
            "value": "default"
        },
        {
            "field": "images.*",
            "name": "save",
            "value": "default"
        },
        {
            "field": "*.lifeCycle",
            "name": "save",
            "value": "asset.lifecycle.action.save"
        },
        {
            "field": "*.lifeCycle",
            "name": "fetch",
            "value": "default"
        },
        {
            "field":"overview.provider",
            "name":"readOnly",
            "value":"true"
        },
        {
            "field":"overview.description",
            "name":"value",
            "value":"provider has not given a description"
        }
    ],

    "fields": [
        {
            "name": "lifeCycle",
            "table": "*",
            "label": "Life Cycle",
            "value": "SampleLifeCycle2"
        } ,
        {
            "name":"banner",
            "table":"images",
            "type":"file"
        },
        {
            "name":"thumbnail",
            "table":"images",
            "type":"file"
        },
        {
            "name":"description",
            "table":"overview",
            "value":"The provider has not given a description."
        }
    ],

    "storage":{

        "images_banner":{

            "lifecycle":{
                "created":["private_{overview_provider}"],
                "in-review":["reviewer","private_{overview_provider}"],
                "published":["Internal/everyone","private_{overview_provider}","reviewer","anon"],
                "unpublished":["private_{overview_provider}"]
            }
        },

        "images_thumbnail":{

             "lifecycle":{
                 "created":["private_{overview_provider}"],
                 "in-review":["reviewer","private_{overview_provider}"],
                 "published":["Internal/everyone","private_{overview_provider}","reviewer","anon"],
                 "unpublished":["private_{overview_provider}"]
             }
        }

    }
}
